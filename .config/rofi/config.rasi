configuration {
    font: "JetBrainsMono Nerd Font 11";
    modes: "drun,run,window";
    sidebar-mode: true;
    show-icons: true;
    drun-display-format: "{icon} {name}";
    display-drun: "󱓟 Apps";
    display-run: "󰌧 Run";
    display-window: "󰘔 Window";
    timeout {
        action: "kb-cancel";
        delay:  0;
    }
    filebrowser {
        directories-first: true;
        sorting-method:    "name";
    }
}

@theme "catppuccin-grey-green.rasi"

